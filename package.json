{
	"name": "sonory-monorepo",
	"version": "0.1.0",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"lint": "turbo lint",
		"format": "turbo format",
		"test": "turbo test",
		"clean": "turbo clean",
		"type-check": "turbo type-check",

		"dev:web": "turbo dev --filter=@sonory/web",
		"dev:api": "turbo dev --filter=@sonory/api",
		"dev:full": "turbo dev --filter=@sonory/web --filter=@sonory/api",

		"build:web": "turbo build --filter=@sonory/web",
		"build:api": "turbo build --filter=@sonory/api",

		"deploy:api": "turbo deploy --filter=@sonory/api",
		"deploy:web": "turbo deploy --filter=@sonory/web",

		"generate-types": "turbo generate-types --filter=@sonory/python-types",
		"python:install": "turbo python:install --filter=@sonory/python-audio-analyzer",
		"python:dev": "turbo python:dev --filter=@sonory/python-audio-analyzer",
		"python:lint": "turbo python:lint --filter=@sonory/python-audio-analyzer",
		"python:format": "turbo python:format --filter=@sonory/python-audio-analyzer",
		"python:test": "turbo python:test --filter=@sonory/python-audio-analyzer",
		"python:build": "turbo python:build --filter=@sonory/python-audio-analyzer",

		"prepare": "husky"
	},
	"dependencies": {
		"@ducanh2912/next-pwa": "^10.2.9",
		"@mapbox/mapbox-gl-geocoder": "^5.0.3",
		"@supabase/supabase-js": "^2.49.8",
		"fp-ts": "^2.16.10",
		"framer-motion": "^12.15.0",
		"idb": "^8.0.3",
		"lucide-react": "^0.514.0",
		"mapbox-gl": "^3.12.0",
		"next": "15.3.2",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-icons": "^5.5.0",
		"recordrtc": "^5.6.2",
		"uuid": "^11.1.0",
		"wavesurfer.js": "^7.9.5",
		"zod": "^3.25.28",
		"zustand": "^5.0.5"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@types/node": "^20",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"turbo": "^2.0.0",
		"typescript": "^5"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": ["biome check --apply", "biome format --write"],
		"**/*.ts?(x)": ["tsc --noEmit"]
	},
	"packageManager": "npm@10.0.0"
}
